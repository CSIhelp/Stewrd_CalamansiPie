{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": false,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": [
    "server.ts",
    "routes/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}